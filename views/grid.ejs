<html>
<head>
<title><%= title %></title>
<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
</head>
<style>
#container {
    width: 100%;
    height: 100%;
}
.player {
    border: 1px solid white;
    width: 160px;
    height: 120px;
    display: inline-block;
    margin: 0px;
}
</style>
<body>
<div id="container">
</div>
<script>

var videos = [
<% for(var i=0; i<videos.length; i++) {%>
    '<%= videos[i] %>',
<% } %>
];

function thumbnailUrl(vidid) {
    return 'http://img.youtube.com/vi/' + vidid + '/0.jpg';
}

function videoUrl(vidid) {
    return 'https://www.youtube.com/watch?v=' + vidid;
}

var container = document.getElementById('container');

for (var i=0; i<videos.length; i++) {
    var a = document.createElement('a');
    a.setAttribute('href', videoUrl(videos[i]));
    a.setAttribute('target', '_blank');
    var d = document.createElement('img');
    d.className = 'player';
    d.id = 'player_' + i.toString();
    d.setAttribute('src', thumbnailUrl(videos[i]));
    a.appendChild(d);
    container.appendChild(a);
}
</script>
</body>
</html>
