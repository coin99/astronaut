<html>
<head>
<title><%= title %></title>
<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
</head>
<style>
#container {
    width: 100%;
    height: 100%;
}
.thumb {
    position: relative;
    border: 1px solid white;
    width: 160px;
    height: 120px;
    display: inline-block;
    margin: 0px;
}
.thumb img {
    width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px;
}
.thumb p {
    color: #0F0;
    font-size: 12;
    margin: 0;
}
#viewCount {
    position: absolute;
    text-align: right;
    right: 1px;
    bottom: 1px;
}
#uploaded {
    position: absolute;
    text-align: left;
    left: 2px;
    bottom: 1px;
}
</style>

<body>
<div id="container">

<% for(var i=0; i<videos.length; i++) {%>
    <a href='https://www.youtube.com/watch?v=<%= videos[i].id %>' target='_blank'>
        <div class="thumb">
            <img src='http://img.youtube.com/vi/<%= videos[i].id %>/0.jpg'>
            <p id="viewCount"><%= videos[i].viewCount || '--'%></p>
            <p id="uploaded"><%= moment(videos[i].uploaded).format("MM-DD h:mm a") %></p>
        </div>
    </a>
<% } %>

</div>
</script>
</body>
</html>
